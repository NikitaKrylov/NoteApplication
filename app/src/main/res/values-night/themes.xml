<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkSlateGray</item>
        <item name="colorPrimaryVariant">@color/Charcoal</item>
        <item name="colorSecondary">@color/AshTeal</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/AshGray100</item>
        <item name="android:textColorPrimary">@color/default_note_font_color</item>
        <item name="android:textColorSecondary">@color/default_note_font_color</item>
        <item name="android:textColor">@color/default_note_font_color</item>
        <item name="popupMenuBackground">@color/AshTeal</item>
        <item name="colorSurface">@color/Manatee</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/AshTeal</item>
        <item name="colorOnSecondary">@color/AshTeal</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/DarkSlateGray</item>
    </style>



    <style name="Theme.NoteApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>


