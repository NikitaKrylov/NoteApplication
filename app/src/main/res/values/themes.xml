<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> <!-- DarkActionBar -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ChampagnePink</item>
        <item name="colorPrimaryVariant">@color/CoffeeBrown</item>
        <item name="colorOnPrimary">@color/light_brown_100</item>
        <item name="android:colorBackground">@color/light_brown_100</item>
        <item name="android:textColorPrimary">@color/Jet</item>
        <item name="android:textColorSecondary">@color/Jet</item>
        <item name="android:textColor">@color/Jet</item>
        <item name="colorOnSurface">@color/LightNoteColor</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ChampagnePink</item>
        <item name="colorSecondaryVariant">@color/CoffeeBrown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/Manatee</item>


    </style>

    <style name="Theme.NoteApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>