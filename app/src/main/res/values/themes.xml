<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApplication" parent="Theme.MaterialComponents.Light.DarkActionBar"> <!-- DarkActionBar -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#88d4ab</item>
        <item name="colorPrimaryVariant">#67b99a</item>

        <item name="colorSecondary">#67b99a</item>

        <item name="android:colorBackground">@color/default_note_background</item>
        <item name="android:textColorPrimary">@color/Jet</item>
        <item name="android:textColorSecondary">@color/Jet</item>
        Цвет иконок в status bar
        <item name="android:textColor">@color/Jet</item>


        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/default_note_background</item>
        <item name="alertDialogTheme">@style/Widget.Dialog.Alert</item>


    </style>


    <style name="Theme.NoteApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>